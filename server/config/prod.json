{
	"google": {
		"clientId": "<clientId>"
	},
	"auth" : {
		"restricted" : "*",
		"cookie" : {
			"secret": "<secret>",
			"cookie": {
				"maxAge": 3000000000, // 34j
				"secure": true
			},
			"rolling": true,
			"resave": true,
			"saveUninitialized": false
		}
	},
	"db": {
		"config": {
			"user": "postgres",
			"database": "showme",
			"password": "postgres",
			"host": "localhost",
			"port": 5432,
			"max": 10,
			"idleTimeoutMillis": 30000
		}
	},
	"log": {
		"file": [
			{
				"level": "info",
				"filename": "./logs/showme.log",
				"handleExceptions": true,
				"json": true,
				"maxsize": 5242880, //5MB
				"maxFiles": 5,
				"colorize": false
			}
		],
		"console": [
			{
				"level": "debug",
				"handleExceptions": true,
				"json": false,
				"colorize": true
			}
		]
	},
	"storage": {
		"images": "images",
		"thumbnails": "images/thumbnails"
	}
}